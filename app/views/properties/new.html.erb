<h1>Property Registration</h1>

<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :'Property name' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>yen
  </div>

  <div class="field">
    <label>Address (e.g. of a residance)</label>
    <%= form.text_field :adress %>
  </div>

  <div class="field">
    <%= form.label :'age of construction' %>
    <%= form.number_field :age %>year (e.g. ADA)
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

 


<hr>
  
    <%=form.fields_for :nearest_stations do |nearest_station| %>
    <h4>Nearest station <%= nearest_station.index+1%></h4>
   
    <%= nearest_station.label :line_name, 'Line Name' %>
    <%= nearest_station.text_field :line_name %>
    <%= nearest_station.label :station_name, 'Station Name' %>
    <%= nearest_station.text_field :station_name %>
    <%= nearest_station.label :number_of_steps, 'Number of steps' %>
    <%= nearest_station.number_field :number_of_steps %><br><br>
    <% end %>
    <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>

<%= link_to 'Back', properties_path %>
